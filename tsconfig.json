{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "/build",
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "exclude": ["node_modules"]
}
